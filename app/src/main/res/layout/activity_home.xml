<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6FEDE59E"

    tools:context="com.example.LANG.LANG.ogren.KelimeDilsecActivity">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/background_border"
       android:orientation="vertical">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="170dp"
        app:cardCornerRadius="12dp"
        android:elevation="5dp"
        android:layout_marginLeft="20dp"

        android:layout_margin="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_border"

        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/web_hi_res_512"
            android:layout_marginTop="10dp"></ImageView>

        <TextView
            android:id="@+id/txtusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#ff54"
            android:textStyle="bold"
            android:text="nama user"
            android:gravity="center"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>



   </GridLayout>















       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:rowCount="8"
           android:columnCount="2"
           android:layout_margin="10dp"
           android:layout_gravity="center"
           android:columnOrderPreserved="false">


           <android.support.v7.widget.CardView
               android:layout_width="160dp"
               android:layout_height="170dp"
               app:cardCornerRadius="12dp"
               android:elevation="12dp"
               android:layout_marginLeft="15dp"

               android:layout_margin="20dp"
               >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:gravity="center"
    android:background="#BAF9E7CF">
    <ImageView
        android:id="@+id/franceimg"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@mipmap/frencher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="French"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textColor="#000080"
        android:gravity="center_horizontal" />
</LinearLayout>
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="160dp"
               android:layout_height="170dp"
               app:cardCornerRadius="12dp"
               android:elevation="5dp"
               android:layout_marginLeft="2dp"
               android:layout_margin="20dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:background="#BAF9E7CF"
                   android:gravity="center">
                   <ImageView
                       android:id="@+id/germanimg"
                       android:layout_width="85dp"
                       android:layout_height="85dp"
                       android:src="@mipmap/germaner"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="German"

                       android:textSize="28dp"
                       android:textColor="#000080"
                       android:textAlignment="center"
                       android:gravity="center_horizontal" />
               </LinearLayout>
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="160dp"
               android:layout_height="170dp"
               app:cardCornerRadius="12dp"
               android:elevation="5dp"
               android:layout_marginLeft="15dp"
               android:layout_margin="20dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:background="#BAF9E7CF"
                   android:gravity="center">
                   <ImageView
                       android:id="@+id/italyimg"
                       android:layout_width="85dp"
                       android:layout_height="85dp"
                       android:src="@mipmap/italianer"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Italian"
                       android:textAlignment="center"

                       android:textSize="28dp"
                       android:textColor="#000080"
                       android:gravity="center_horizontal" />
               </LinearLayout>
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="160dp"
               android:layout_height="170dp"
               app:cardCornerRadius="12dp"
               android:elevation="5dp"
               android:layout_marginLeft="2dp"
               android:layout_margin="20dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:background="#BAF9E7CF"
                   android:gravity="center">
                   <ImageView
                       android:id="@+id/spainimg"
                       android:layout_width="85dp"
                       android:layout_height="85dp"
                       android:src="@mipmap/indiir"

                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="English"
                       android:textAlignment="center"

                       android:textSize="28dp"
                       android:textColor="#000080"
                       android:gravity="center_horizontal" />
               </LinearLayout>
           </android.support.v7.widget.CardView>

       </GridLayout>

       <Button
           android:id="@+id/buttonLogout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="1dp"
           android:background="#6FEDE59E"
           android:text="ÇIKIŞ"

           android:textColor="#ff54" />
       <Button
           android:id="@+id/buttonback"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="1dp"
           android:background="#6FEDE59E"
           android:text="geri"

           android:textColor="#ff54" />



   </LinearLayout>


</ScrollView>
